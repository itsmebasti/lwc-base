{
    "name": "lwc-base",
    "version": "1.0.0",
    "license": "MIT",
    "main": "./src/lib/index.js",
    "files": [
        "src/modules/",
        "src/lib/"
    ],
    "lwc": {
        "modules": [
            {
                "dir": "src/modules"
            },
            {
                "npm": "lightning-base-components"
            }
        ],
        "expose": [
            "base/select",
            "base/tab",
            "base/toast",
            "base/toggle",
            "base/verticalTabs",
            "base/timeline",
            "base/timelineItem",
            "github/corner"
        ]
    },
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "helmet": "^4.6.0"
    },
    "devDependencies": {
        "@lwc/rollup-plugin": "^2.10.0",
        "@lwc/synthetic-shadow": "^2.11.0",
        "@rollup/plugin-node-resolve": "^13.2.1",
        "@rollup/plugin-replace": "^4.0.0",
        "@salesforce-ux/design-system": "^2.19.0",
        "lightning-base-components": "^1.14.6-alpha",
        "lwc": "^2.10.0",
        "rollup": "^2.70.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-terser": "^7.0.2"
    },
    "scripts": {
        "build": "rollup --config --environment NODE_ENV:production",
        "start": "node server.js",
        "gcp-build": "yarn build",
        "watch": "rollup --config --watch",
        "local": "yarn build && yarn start",
        "deploy": "gcloud app deploy --quiet",
        "open": "gcloud app browse"
    }
}
